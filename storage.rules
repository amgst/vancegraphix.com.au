rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to ready-sites folder
    // TODO: Restrict write access to authenticated users only
    // For now, allowing write if true for testing, BUT THIS IS INSECURE.
    // You should change this to: allow write: if request.auth != null;
    match /ready-sites/{fileName} {
      allow write: if true;
      allow read: if true;
    }
  }
}

