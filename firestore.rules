rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /tools/{tool} {
      // Allow read access to everyone
      allow read: if true;
      
      // TODO: Restrict write access to authenticated users only
      // For now, allowing write if true for testing, BUT THIS IS INSECURE.
      // You should change this to: allow write: if request.auth != null;
      allow write: if true; 
    }
  }
}
